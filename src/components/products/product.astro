---
import { IProduct } from "../../ts/api/products";

    const { product } = Astro.props;
    const {P_ID, Title, Price, Image}:IProduct = product.attributes;
---

<div class="card shadow-sm" style="flex: 0 0 calc(33% - 0.75rem); min-width: 250px;" data-bs-target="#modal_open" data-bs-toggle="modal" id={P_ID}>
    <div class="card-header">
        <h3 class="card-title">{Title}</h3>
        <div class="card-toolbar">
            <button type="button" class="btn btn-sm btn-success btn-add" data-action="add">
                Add
            </button>
            <button type="button" class="btn btn-sm btn-light btn-edit" data-action="edit">
                Edit
            </button>
            <button type="button" class="btn btn-sm btn-danger btn-delete" data-action="delete">
                Delete
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="card-p mb-10">Price: {Price}</div>

        <div class="text-center px-4">
            <img class="mw-100 mh-300px card-rounded-bottom" alt="" src={Image}/>
        </div>
    </div>
</div>