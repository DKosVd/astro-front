---
interface Props {
    title: string;
    source: string;
    sourceText:string;
    btnText:string;
}

const {title, source, sourceText, btnText} = Astro.props;
---

<fieldset>
    <legend>{title}</legend>
    <slot/>
</fieldset>
<button type="submit" class="btn btn-primary">{btnText}</button>
<a href={source}>{sourceText}</a>
